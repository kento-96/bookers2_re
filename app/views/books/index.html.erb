<div class="container px-5 px-sm-0">

  <% if @book.errors.any? %>
   <div class="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited thid obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
   </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= render "books/sidebar",user: @user,book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
      <thred>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thred>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill,100,100,format: "jpeg",fallback: "no_image.jpg",size: "40x40"%>
            <% end %>
          </td>
          <td>
            <%= link_to book.title,book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
           <td id="comment-count">
            <%= render 'books/comment_count', book: book %>
           </td>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>