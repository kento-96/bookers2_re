<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user ,local:true do |f| %>
      <div class="form-group">
        <lavel for="title">Name</lavel>
        <%= f.text_field :name,class:"form-control book_title" %>
      </div>
      <div class="form-group">
        <lavel for="body">Image</lavel>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
         <lavel for="body">Inroduction</lavel>
         <%= f.text_area :introduction, class:"form-control book_body" %>
       </div>
       <div class="actions">
         <%= f.submit 'Update User',class:"btn btn-success" %>
       </div>
       <% end %>
    </div>
  </div>
</div>